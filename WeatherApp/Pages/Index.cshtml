@page
@model IndexModel
@{ ViewData["Title"] = "Home page";
    Layout = "~/Pages/Shared/_Layout.cshtml"; }

<form asp-page-handler="GetWeatherForecast" method="post">
    <div class="row">
        <div class="col-md-12">

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Address: </label>
                        <input type="search" name="address" class="form-control" asp-for="SearchTerms" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12" style="text-align:right">
                    <button id="btn_Search" class="btn btn-primary">
                        Search
                    </button>
                </div>
            </div>

        </div>
    </div>
</form>

@if (Model.Forecast != null && Model.Forecast.ToList().Count > 0)
{
<div class="box box-primary">
    <div class="box-header">
        <h1>
            Weather Details
        </h1>
        <p>
            Weather forecast for: <strong> @Model.SearchTerms</strong>
        </p>
    </div>

    <div id="div_Forcast" style=" padding-top: 50px;" class="row">
        @foreach (var item in Model.Forecast)
        {
<div class="col-md-6">
    <div class="row">
        <div class="col-md-6">
            <div class="small-box">
                <div class="inner">
                    <div class="row">
                        <div class="col-md-6">
                            <h3>@item.temperature° @item.temperatureUnit</h3>

                            <p>@item.name</p>
                        </div>
                        <div class="col-md-6" style="text-align:right">
                            <img src="@item.icon" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
</div>}
    </div>
</div>}
else if (Model.Forecast != null && Model.Forecast.ToList().Count == 0)
{
<h4>Result Not Found!</h4>}
<div class="spanner">
    <div class="loader"></div>
    <p>Please wait...</p>
</div>
